<h5><%= I18n.t 'txt.views_posts.formatting_help', :default => 'Formatting Help' %></h5>

<div id="MarkupHelp">
<ul class="help">
  <li><%= t 'txt.views_posts.formatting_bold', :default => '**bold**' %></li>
  <li><%= t 'txt.views_posts.formatting_italics', :default => '*italics*, _italics_' %></li>
  <li><%= (t 'txt.views_posts.formatting_blockquote', :default => '&gt; <span>(quotes)</span>').html_safe %></li>
  <li>[IBM](http://www.ibm.com)</li>
  <li><%= (t 'txt.views_posts.formatting_list', :default => '* or 1. <span>(lists)</span>').html_safe %></li>
</ul>
</div>

<script type="text/javascript">
  var t;
  if ( $('edit_post_body') != null ) {
    t = $('edit_post_body');
  } else {
    t = $('post_body');
  }
  setupSVGedit(t, '<%= asset_path "svg-edit/editor/svg-editor.html" %>')
</script>
